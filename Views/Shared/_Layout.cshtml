<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - St10375622Part2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/St10375622Part2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CMCS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!--Dropdown List for Lecturer tab-->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Lecturer
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="Lecturers" asp-action="Create">Create Lecturer</a>
                                <a class="dropdown-item" asp-area="" asp-controller="LecturerClaim" asp-action="Create">Submit Claims</a>
                                <a class="dropdown-item" asp-area="" asp-controller="File" asp-action="UploadFile">Upload Documents</a>
                                <a class="dropdown-item" asp-area="" asp-controller="LecturerClaim" asp-action="Index">View Claims</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Calculation" asp-action="Index">Calculate</a>
                            </div>
                        </li>
                        <!--Dropdown List for Programme tab-->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Programme Coordinator
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="ProgrammeCoordinators" asp-action="Create">Create</a>
                                <a class="dropdown-item" asp-area="" asp-controller="LecturerClaim" asp-action="Index">Change Claim Status</a>
                            </div>
                        </li>
                        <!--Dropdown List for Academic Manager tab-->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Academic Manager
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="AcademicManagers" asp-action="Create">Create</a>
                                <a class="dropdown-item" asp-area="" asp-controller="LecturerClaim" asp-action="Index">Change Claim Status</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="main-office">
            <h3>Main Office</h3>
            <p>1234 Main St</p>
            <p>Durban, Umhlanga, 12345</p>
        </div>

        <div class="useful-links">
            <h3>Useful Links</h3>
            <ul>
                <li><a href="#">Support</a></li>
            </ul>
        </div>

        <div class="social-icons-wrapper">
            <h3>Socials</h3>
            <div class="social-icons">
                <a href="#"><img src="~/facebook.png" /></a>
                <a href="#"><img src="~/Instagram.png" /></a>
                <a href="#"><img src="~/youtube.png" /></a>
                <a href="#"><img src="~/whatsapp.png" /></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
